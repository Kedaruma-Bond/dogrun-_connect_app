<%= simple_form_for user, url: send(users_path), data: { turbo: false } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="w-full flex flex-col mt-8">
    <div class="md:flex items-center">
      <div class="w-full md:w-1/2 flex flex-col"> 
        <%= f.label :name, label_html: { class: "font-bold leading-none" } %>
        <%= f.input :name, input_html: { class: "block w-full sm:w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
      </div>
      <div class="w-full md:w-1/2 flex flex-col mt-7 md:mt-0">
        <%= f.label :email, label_html: { class: "font-bold leading-none" } %>
        <%= f.input :email, input_html: { class: "block w-full sm:w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
      </div>
    </div>
    <div class="md:flex items-center">
      <div class="w-full md:w-1/2 flex flex-col mt-7"> 
        <%= f.label :password, label_html: { class: "font-bold leading-none" } %>
        <%= f.input :password, input_html: { class: "block w-full sm:w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: '　', required: true, error: false %>
      </div>
      <div class="w-full md:w-1/2 flex flex-col mt-7"> 
        <%= f.label :password_confirmation, label_html: { class: "font-bold leading-none" } %>
        <%= f.input :password_confirmation, input_html: { class: "block w-full sm:w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint_html: { class: "text-sm block" }, hint: t('.password_hint'), required: true, error: false %>
      </div>
    </div>
    <%= f.hidden_field :deactivation, value: 'account_activated' %>

    <div class="flex mt-7 justify-center text-sm">
      <%= f.input :agreement, as: :boolean, checked: false, label: false, error: false, input_html: {class: "bg-gray-100 rounded border-gary-300 focus:ring-blue-500 focus:ring-2"} %>
      <%= f.label :agreement, label_html: { class: "font-bold text-gray-500" } do %>
        &nbsp;
        <a href="/terms_of_service" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-400">
          <%= t('defaults.terms_of_service') %>
        </a>
        と
        <a href="/privacy_policy" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-400">
          <%= t('defaults.privacy_policy') %>
        </a>
        <br>
        &nbsp; に同意する 
      <% end %>
    </div>
  </div>
  <div class="flex items-center justify-center mt-3">
    <%= f.button :submit, t('defaults.registration'), class: "mt-3 font-bold leading-normal text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
  </div>
<% end %> 
