<%= form_with model: @encount_dog, url: {controller: "encount_dogs", action: "update"}, data: { controller: 'disable', "disable-with-value": t('defaults.updating') } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="text-gray-600 w-full md:w-1/3 mt-4">
      <%= f.label :color_marker, class: "font-bold leading-none" %>
      <%= f.select :color_marker, EncountDog.color_markers_i18n.invert, {include_blank: t('.select_color_marker')}, { class: "block w-full leading-1 text-gray-900 p-3 focus:outline-none focus:border-blue-700 bg-gray-100 rounded border border-gray-200" } %>
  </div>
  <div class="text-gray-600 w-full flex flex-col mt-4">
    <%= f.label :memo, class: "font-bold leading-none" %>
    <%= f.text_area :memo, placeholder: t('.memo_placeholder'), class: "h-32 block w-full p-3 mt-2 text-gray-800 font-normal bg-white bg-clip-padding rounded border border-solid border-gray-300 transition ease-in-out m-0 focus:text-gray-700 focus:bg-gray-100 focus:border-blue-600 focus:outline-none placeholder-gray-400" %>
  </div>
  <div class="sm:flex mt-9">
    <div class="flex justify-center sm:ml-0 sm:mx-3 h-[56px] mt-0 md:mt-3">
      <button data-controller="back-button" data-action="back-button#goBack" class="font-bold leading-normal text-white px-12 bg-rose-700 rounded hover:bg-rose-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none">
        <span><%= t('defaults.back') %></span>
      </button>
    </div>
    <div class="flex justify-center mt-3 sm:mt-0 sm:mx-3">
      <%= f.button class: "flex mt-3 font-bold leading-normal text-white py-4 px-12 bg-emerald-400 rounded hover:bg-emerald-500 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none disabled:cursor-not-allowed disabled:bg-emerald-300", data: { "disable-target": "submitButton" } do %>
        <%= spinner_icon_for_form_disable_button %>
        <span data-disable-target="buttonText"><%= t('defaults.update') %></span>
      <% end %>
    </div>
  </div>
<% end %>
