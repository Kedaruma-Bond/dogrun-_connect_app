<%= simple_form_for [:togo_inu_shitsuke_hiroba, user_detail], data: { controller: 'disable', "disable-with-value": t('defaults.processing') } do |f|  %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= simple_format(t('defaults.these_information_is_not_viewable'), class: "text-red-500 text-sm text-center" )%>
  <div class="mt-1">
    <%= f.input :zip_code, input_html: { class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-2 bg-gray-100 border rounded border-gray-200"}, label: UserDetail.human_attribute_name(:zip_code), hint: false, error: false %>
  </div>
  <div class="mt-4">
    <%= f.input :address_1, as: :text, input_html: { rows: 2, class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-2 bg-gray-100 border rounded border-gray-200"}, label: UserDetail.human_attribute_name(:address_1), hint: false, error: false %>
  </div>
  <div class="mt-4">
    <%= f.input :address_2, as: :text, input_html: { rows: 2, class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-2 bg-gray-100 border rounded border-gray-200"}, label: UserDetail.human_attribute_name(:address_2), hint: false, error: false %>
  </div>
  <div class="mt-4">
    <%= f.input :phone_number, input_html: { class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-2 bg-gray-100 border rounded border-gray-200"}, label: UserDetail.human_attribute_name(:phone_number), hint: false, error: false %>
  </div>
  <div class="flex justify-center mt-3 sm:mt-0 sm:mx-3">
    <%= f.button :submit, class: "mt-3 font-bold leading-normal text-white py-4 px-10 bg-green-700 rounded hover:bg-green-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none diabled:cursor-not-allowed disabled:bg-green-500" do %>
      <span><%= t'defaults.registration' %></span>
    <% end %>
  </div>
<% end %>
