<% content_for(:title, t('.dogrun')) %>
<div class='text-center mt-10'>
  <h1 class='text-3xl text-indigo-800 font-semibold mt-3'><%= t'.dogrun' %></h1>
  <% if logged_in? %>
    <div class="flex flex-col justify-center mt-4">
      <p class='text-2xl mt-2 relative right-10'>
        <%= t'.site_in' %>
      </p>
      <div class="text-2xl flex text-center mt-4 mx-auto relative left-12">
        <h1 class="flex text-6xl pb-2">
          <%= @number_of_dogs %>
        </h1>
        <span class="ml-10 text-left">
          <%= simple_format(t'.playing1') %>
          <%= simple_format(t'.playing2') %>
          </span>
      </div>
    </div>

    <%= render 'togo_inu_shitsuke_hiroba/static_pages/login_top_content' %>

    <%= link_to '#' do %>
      <button class="mt-4 bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded inline-flex items-center">
        <svg class="fill-current w-6 h-6 mr-2" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.636 18.364a9 9 0 010-12.728m12.728 0a9 9 0 010 12.728m-9.9-2.829a5 5 0 010-7.07m7.072 0a5 5 0 010 7.07M13 12a1 1 0 11-2 0 1 1 0 012 0z"></path>
        </svg>
        <%= t'.detail' %>
      </button>
    <% end %>
  <% else %>
    <%= image_tag 'togo_inu_shitsuke_hiroba_logo.png', class: 'rounded-full w-3/12 h-3/12 mx-auto mt-3' %>
    <%= link_to togo_inu_shitsuke_hiroba_signup_path do %>
      <button class="items-center text-center justify-center inline-flex px-4 py-2 text-2xl text-bold mt-10 btn text-white bg-blue-500 transform hover:scale-110 hover:bg-blue-400 duration-500 focus:outline-none focus:shadow-outline rounded-full focus:ring focus:ring-blue-300 focus:ring-opacity-80">
        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"></path>
        </svg>
        &nbsp;
        <%= t'.signup' %>
      </button>
    <% end %>
    <%= link_to togo_inu_shitsuke_hiroba_compliance_confirmations_path do %>
      <p class="mt-10 text-3xl text-center font-semibold text-blue-500 underline transform hover:scale-110 hover:text-blue-400 duration-500">
        <%= t'.before_using_dogrun' %>
    <% end %>
  <% end %>
</div>
