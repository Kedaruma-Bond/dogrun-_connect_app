<% content_for(:title, t('.title')) %>
<div class="bg-gray-300 w-full mx-auto px-6 lg:px-8 py-4">
  <div class="container bg-purple-200 w-full shadow rounded-lg p-2 sm:p-3">
    <p class="text-3xl font-bold text-center my-5 text-gray-700"><%= t('.title') %></p>
    <%= simple_form_for @dogrun_place, url: admin_dogrun_place_path, data: { controller: 'preview disable', "disable-with-value": t('defaults.sending') } do |f| %>
      <%= render partial: 'admin/dogrun_places/form', locals: { f: f, naming_of_registration_card: @naming_of_registration_card } %>
    <% end %>
  </div>
</div>

