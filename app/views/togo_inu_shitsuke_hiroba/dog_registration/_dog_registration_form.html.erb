<p class="sm:text-xl text-3xl font-bold leading-7 text-center text-gray-700 mb-5"><%= t'.title' %></p>
<%= simple_form_for @dog_registration, url: togo_inu_shitsuke_hiroba_dog_registration_confirm_path, data: { turbo: false } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="w-full flex flex-col mt-8 text-gray-700">
    <div class="md:flex items-center">
      <div class="w-full md:w-1/4 flex flex-col"> 
        <%= f.label :registration_number, t('.registration_number'), label_html: { class: "font-bold leading-none" } %>
        <%= f.input :registration_number, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
      </div>
      <div class="w-full md:w-1/4 flex flex-col md:mt-0 mt-7">
        <%= f.label :name, t('.name'), label_html: { class: "font-bold leading-none" } %>
        <%= f.input :name, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
      </div>
      <div class="w-full md:w-1/4 flex flex-col md:mt-0 mt-7 items-center justify-center"> 
        <%= f.label :castration, label_html: { class: "font-bold leading-none" } %>
        <%= f.input :castration, as: :boolean, checked_value: 'castrated', unchecked_value: 'non_castrated', input_html: { class: "block rounded-lg leading-none p-3 focus:outline-none focus:border-blue-700 mt-4" }, label: false, hint: false, error: false %>
      </div>
      <div class="w-full md:w-1/4 flex flex-col md:mt-0 mt-7 items-center justify-center"> 
        <%= f.label :public, label_html: { class: "font-bold leading-none" } %>
        <%= f.input :public, as: :boolean, checked_value: 'public_view', unchecked_value: 'non_public', input_html: { class: "block rounded-lg leading-none p-3 focus:outline-none focus:border-blue-700 mt-4" }, label: false, hint: false, error: false %>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-center mt-3">
    <%= f.button :submit, t('defaults.confirm'), class: "mt-3 font-bold leading-normal text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
  </div>
<% end %> 
