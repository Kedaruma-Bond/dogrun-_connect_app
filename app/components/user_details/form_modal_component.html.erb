<%= turbo_frame_tag "user_detail_form_modal", autoscroll: true, data: { autoscroll_block: "start" }  do %>
  <%= tag.div data: { controller: "turbo-form-modal", "turbo-form-modal_target": "modal", action: "turbo:submit-end->turbo-form-modal#submitEnd" }, 
      class: "animate-fade-in flex items-center justify-center fixed z-40 inset-0 h-full p-3" do %>
    <button data-action="turbo-form-modal#hideModal" class="cursor-default w-full h-full fixed inset-0 bg-gray-700 bg-opacity-50"></button>
    <div class="relative bg-slate-300 p-2 shadow-xl rounded-lg border-2 border-gray-700 dark:border-white w-full md:w-96 backdrop-blur bg-opacity-75">
      <button type="button" data-action="turbo-form-modal#hideModal" class="absolute top-0 right-0 rounded-full bg-gray-200 border-2 border-gray-700 shadow-md">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <p class="text-center text-2xl text-gray-700 font-bold leading-7 mb-2 pt-4">
        <%= @title %>
      </p>
      <div class="w-full px-4 py-2">
        <%= content %>
      </div>
    </div>
  <% end %>
<% end%>
