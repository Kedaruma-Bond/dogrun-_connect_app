<details data-controller="accordion" class="mt-2">
  <summary data-accordion-target="summary" data-action="click->accordion#toggle" class="mt-3 hover:cursor-pointer flex justify-center">
    <h1 class="flex font-bold text-sm text-gray-500">
      <%= t('.show_owner_information')%>
    </h1>
  </summary>
  <div data-accordion-target="content" class="bg-gray-700 px-4 py-2 rounded-lg max-w-[245px]">
    <div class="text-left text-xs">
      <p class="text-gray-400">
        <%= User.human_attribute_name(:name) %>
      </p>
      <h2 class="mt-1 text-gray-300 text-base font-normal">
        <%= dog.user.name %>
      </h2>
      <p class="text-gray-400">
        <%= User.human_attribute_name(:email) %>
      </p>
      <h2 class="mt-1 text-gray-300 text-base font-normal">
        <%= dog.user.email %>
      </h2>
      <% if !dog.user_detail.nil? %>
        <p class="text-gray-400">
          <%= UserDetail.human_attribute_name(:zip_code) %>
        </p>
        <h2 class="mt-1 text-gray-300 text-base font-normal">
          <%= dog.user_detail.zip_code %>
        </h2>
        <p class="text-gray-400 mt-2">
          <%= t('defaults.address') %>
        </p>
        <h2 class="mt-1">
          <%= simple_format(dog.user_detail.address_1, class:"text-gray-300 text-sm font-normal") %>
        </h2>
        <% if !dog.user_detail.address_2.nil? %>
          <h2 class="mt-1">
            <%= simple_format(dog.user_detail.address_2, class: "text-gray-300 text-sm font-normal") %>
          </h2>
        <% end %>
        <p class="text-gray-400 mt-2">
          <%= UserDetail.human_attribute_name(:phone_number) %>
        </p>
        <h2 class="mt-1 text-gray-300 text-base font-normal">
          <%= dog.user_detail.phone_number %>
        </h2>
      <% else %>
        <p class="text-red-300 mt-2">
          <%= t(".not_registered_user_detail") %>
        </p>
      <% end %>
    </div>
  </div>
</details>
