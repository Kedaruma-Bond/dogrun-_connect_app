<div class="max-w-5xl mx-auto px-6 sm:px-6 lg:px-8 mt-5">
    <div class="bg-purple-200 w-full shadow rounded p-8 sm:p-12">
      <p class="text-3xl font-bold leading-7 text-center"><%= t'.title' %></p>
      <table>
        <tbody class="md:flex items-center mt-12">
          <tr class="w-full md:w-1/2 flex flex-col">
            <td class="font-semibold leading-none "><%= t'.name' %></td>
            <td class="block leading-none text-gray-900 p-3 mt-4"><%= @contact.name %></td>
          </tr>
          <tr class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
            <td class="font-semibold leading-none"><%= t'.email' %></td>
            <td class="block leading-none text-gray-900 p-3 mt-4"><%= @contact.email %></td>
          </tr>
          <tr class="w-full flex flex-col mt-8">
            <td class="font-semibold leading-none"><%= t'.message' %></td>
            <td class="text-base leading-none text-gray-900 p-3 mt-4"><%= @contact.message %></td>
          </tr>
        </tbody>
      </table>
      <%= simple_form_for @contact, url: '/togo_inu_shitsuke_hiroba/contacts/create', data: { turbo: false } do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :message %>
        <div class="flex items-center justify-center w-full">
          <%= f.button :submit, '送信', class: "mt-9 font-semibold leading-none text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
        </div>
      <% end %>
      <%= simple_form_for @contact, url: 'togo_inu_shitsuke_hiroba/contacts/back', data: { trubo: false } do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :email %>
        <%= f.hidden_field :message %>
        <div class="flex items-center justify-center w-full">
          <%= f.button :submit, '戻る', class: "mt-9 font-semibold leading-none text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
        </div>
      <% end %>
    </div>
</div>

