<% content_for(:title, @title) %>
<%= turbo_frame_tag "article_post_form_modal" %>
<div class="max-w-3xl md:mx-auto pt-2 pb-2 sm:mx-32 bg-purple-200 rounded-lg">
  <div class="w-full p-4 sm:p-10">
    <%= simple_format(@title, class: "text-center text-2xl font-bold leading-7 text-center text-gray-700" ) %>
    <% if @dogs.blank? %>
      <p class="text-blue-500 text-center font-semibold mt-5">
        <%= t('local.registration_numbers.new.no_dogs_to_register') %>
      </p>
    <% else %>
      <%= content %> 
    <% end %>
  </div>
</div>
