<%= turbo_frame_tag "entries_ranking" do %>
<div class="flex items-center justify-center">
  <% if @entries_ranking.blank? %>
    <h2 class="my-3">
      <%= simple_format(t('.ranking_func_not_activated'), class: "text-gray-700 opacity-50 font-bold text-lg") %>
    </h2>
  <% else %>
    <section class="table text-gray-600">
      <div class="table-row-group px-2 py-2 mx-auto">
        <% @entries_ranking.each do |array| %>
          <div class="table-row mb-4">
            <% if array[0] == 1 %>
              <div class="table-cell align-middle p-3">
                <div class="w-8 h-8 rounded-full bg-yellow-500">
                  <svg class="current-fill p-2 text-gray-200" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
