<% content_for(:title, t('.title')) %>
<div class="bg-purple-200 mx-1 md:mx-auto max-w-5xl shadow rounded p-2 sm:p-10">
  <p class="text-2xl text-gray-700 font-bold leading-7 text-center mb-5 mt-6"><%= t'.title' %></p>
  <%= simple_form_for @user, url: password_reset_path(@token), 
    data: { "turbo-confirm": t('.password_update_confirm'), controller: "disable-confirm", "disable-confirm-with-value": t('defaults.updating') } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <section class="text-gray-600 p-3 font-medium">
      <div class="mt-3 mx-auto">
        <p class="w-3/4 sm:w-1/3 mx-auto">
          <%= f.label :email %>:
        </p>
        <p class="w-3/4 sm:w-1/3 mx-auto font-bold text-lg">
          <%= @user.email %>
        </p>
      </div>
      <div class="mt-10 mx-auto">
        <div class="w-full sm:w-1/2 mx-auto">
          <%= f.label :password, t('.new_password'), label_html: { class: "font-bold leading-none"} %>
          <%= f.input :password, input_html: { class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
        </div>
        <div class="w-full sm:w-1/2 mt-4 mx-auto ">
          <%= f.label :password_confirmation, t('.new_password_confirmation'), label_html: { class: "font-bold leading-none"} %>
          <%= f.input :password_confirmation, input_html: { class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
        </div>
      </div>
      <div class="flex items-center justify-center w-full mt-6">
        <%= f.button :button, data: { "disable-confirm-target": "submitButton" },
          class: "disabled:cursor-not-allowed disabled:bg-blue-600 flex items-center px-10 py-4 font-midium tracking-wide text-white transition-colors duration-200 transform bg-blue-700 rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" do %>
          <%= spinner_icon_for_form_disable_button %>
          <div data-disable-confirm-target="buttonText" class="flex">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"></path>
            </svg>
            <span class="mx-1 text ml-2">
              <%= t('.update') %>
            </span>
          </div>
        <% end %>
      </div>
    </section>
  <% end %>
</div>
