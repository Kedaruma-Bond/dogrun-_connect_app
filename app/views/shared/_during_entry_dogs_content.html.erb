<section>
  <div class="w-full px-1">
    <div class="flex flex-col min-w-0 w-full px-1 py-3 rounded-lg bg-gray-600 text-gray-200 font-medium">
      <h1 class="mx-auto text-base font-semibold mb-2"><%= t('.during_entry_dogs') %></h1>
      <div class="w-full h-px bg-gray-700 rounded mb-2 sm:hidden"></div>
      <div class="block w-full overflow-x-auto" data-controller="display-empty" data-display-empty-hide-class="hidden">
        <div class="table table-auto items-center w-full bg-transparent border-collapse">
          <div class="sm:table-header-group hidden">
            <div class="table-row">
              <div class="table-cell text-center text-sm whitespace-nowrap border-b border-gray-700">
                <%= simple_format(t'defaults.thumbnail') %>
              </div>
              <div class="table-cell text-center text-sm whitespace-nowrap border-b border-gray-700">
                <%= simple_format(t'defaults.dog_name') %>
              </div>
              <div class="hidden md:table-cell pl-2 text-sm whitespace-nowrap text-left border-b border-gray-700">
                <%= t'defaults.breed' %>
              </div>
              <div class="hidden md:table-cell pl-2 text-sm whitespace-nowrap text-left border-b border-gray-700">
                <%= t'defaults.age' %>
              </div>
              <div class="hidden md:table-cell pl-2 text-sm whitespace-nowrap text-left border-b border-gray-700">
                <%= t'defaults.sex' %>
              </div>
              <div class="hidden md:table-cell pl-2 text-sm whitespace-nowrap text-left border-b border-gray-700">
                <%= t'defaults.weight' %>
              </div>
              <div class="table-cell pl-2 text-sm whitespace-nowrap text-left border-b border-gray-700">
                <%= simple_format(t'defaults.entry_at') %>
              </div>
              <div class="table-cell text-sm whitespace-nowrap border-b border-gray-700">
                <%= simple_format(t'defaults.owner_comment') %>
              </div>
            </div>
          </div>
          <%= turbo_frame_tag dom_id(@dogrun_place, "entries_list"), class: "table-row-group", data: { "display-empty-target": "list" } do %>
            <% if !@dogs_public_view.nil? %>
              <% @dogs_public_view.size.times do |t| %>
                <%= render partial: "shared/entry_dog", locals: { dog: @dogs_public_view[t], dogrun_place: @dogrun_place, dog_profile_path: dog_profile_path } %>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <div class="text-center text-sm mt-1" data-display-empty-target="emptyMessage">
          <%= t('.waiting_your_coming') %>
        </div>
      </div>
    </div>
  </div>
</section>
