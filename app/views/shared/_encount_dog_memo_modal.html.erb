<%= tag.dialog data: { "message-modal-target": "modal" },
  class: "message-modal" do %>
  <%= message_modal_close_button %>
  <div class="px-2 py-3">
    <div class="px-4 sm:px-6 flex">
      <div class="w-11 h-11 items-center mr-3">
        <%= encount_dog_thumbnail(encount_dog.dog, encount_dog) %>
      </div>
      <h3 class="text-lg font-bold text-gray-700 my-2"><%= t('defaults.encount_dog_memo') %></h3>
    </div>
    <div class="w-full h-1 bg-gray-700 rounded mt-1 mb-2"></div>
    <%= simple_format(encount_dog.memo, class: "text-base font-medium text-gray-700 text-left") %>
  </div>
<% end %>
