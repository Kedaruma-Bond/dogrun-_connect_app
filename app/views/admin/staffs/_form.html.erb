<dialog class="bg-white shadow-xl w-1/4 backdrop:bg-gray-700 backdrop:bg-opacity-50 open:animate-fade-in open:backdrop:animate-fade-in" data-modal-target="modal">
  <button type="button" data-action="modal#close" class="float-right">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
  <div class="px-4 py-5 border-b border-gray-200">
    <h3 class="text-lg leading-6 font-bold text-gray-900">
      <%= t'.signup_staff' %>
    </h3>
    <%= form_with(model: @staff, id: "staff_form", url: { controller: 'staffs', action: 'create' }, data: { modal_target: 'form' }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="w-full flex flex-col mt-8">
        <div class="w-full flex flex-col"> 
          <%= f.label Staff.human_attribute_name(:name), class: "font-bold leading-none" %>
          <%= f.text_field :name, class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" %>
        </div>
        <div class="w-full flex flex-col mt-7">
          <%= f.label Staff.human_attribute_name(:email), class: "font-bold leading-none" %>
          <%= f.email_field :email, class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" %>
        </div>
        <%= f.hidden_field :dogrun_place_id, value: current_user.dogrun_place_id %>
      </div>
      <div class="flex items-center justify-center mt-3">
        <%= f.submit t('defaults.registration'), class: "mt-3 font-bold leading-normal text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
      </div>
    <% end %> 
  </div>
</dialog>
