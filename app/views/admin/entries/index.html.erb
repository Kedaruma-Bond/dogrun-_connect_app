<% content_for(:title, t('.title')) %>
<div class="container bg-gray-300 flex flex-col">
  <h2 class="mt-2 ml-2">
    <%= t('.title') %>
  </h2>
  <div class="overflow-x-auto">
    <div class="py-2 w-full px-2">
      <%= render partial: 'admin/entries/search_form' %>
      <table class="mt-3 w-full">
        <thead class="bg-white border-b">
          <tr>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.date') %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= RegistrationNumber.human_attribute_name(:registration_number) %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= User.human_attribute_name(:name) %>
            </th>
            <th scope="col">
              <%= simple_format(t('defaults.thumbnail'), class:"font-medium text-sm px-3 py-2 text-left") %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.dog_name') %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.entry_at') %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.exit_at') %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.delete') %>
            </th>
          </tr>
        </thead>
        <tbody>
          <%= render @entries %>
        </tbody>
      </table>
        <%= render partial: "shared/pagination", locals: { pagy: @pagy } %>
    </div>
  </div>
</div>
