<% content_for(:title, t('.title')) %>
<div class="max-w-5xl mx-auto px-6 sm:px-6 lg:px-8 mt-5">
  <p class="text-3xl font-bold leading-7 text-center mb-10"><%= t'.dogrun' %></p>
  <div class="bg-purple-200 w-full shadow rounded p-8 sm:p-12">
    <div class="container flex flex-col items-center px-4 py-6 mx-auto">
        <h2 class="text-3xl font-bold tracking-tight text-gray-600">
            <%= t'.title' %>
        </h2>

        <p class="block max-w-2xl mt-6 text-xl text-gray-500 text-left">
          <%= t'.name' %>  :<br/>
          <%= @registration.name %> <br/><br/>
          <%= t'.email' %> :<br/>
          <%= @registration.email %> <br/><br/>
          <%= t'.password' %> :<br/>
          <%= @password_dot %> <br/><br/>
          <%= t'.registration_number' %> :<br/>
          <%= @registration.registration_number %> <br/><br/>
          <%= t'.dog_name' %> :<br/>
          <%= @registration.dog_name %> <br/><br/>
          <% if @registration.castration == 'true' %>
            <%= t'.castration' %> :<br/>
            <%= t('.castrated')  %> <br/><br/>
          <% else %>
            <%= t'.castration' %> :<br/>
            <%= t('.non_castrated')  %> <br/><br/>
          <% end %>
          <% if @registration.public == 'true' %>
            <%= t'.public' %> :<br/>
            <%= t('.public_view') %> <br/><br/>
          <% else %>
            <%= t'.public' %> :<br/>
            <%= t('.non_public') %> <br/><br/>
          <% end %>
        </p>

        <div class="flex items-center">
          <input id="link-checkbox" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
          <label for="link-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">I agree with the <a href="#" class="text-blue-600 dark:text-blue-500 hover:underline">terms and conditions</a>.</label>
        </div>

        <div class="mt-6 flex">
          <%= simple_form_for @registration, url: togo_inu_shitsuke_hiroba_signup_form_index_path, data: { trubo: false } do |f| %>
            <div class="inline-flex w-full mt-4 overflow-hidden shadow sm:w-auto sm:mx-3 sm:mt-0">
              <%= f.button :submit, t('.back'), name: 'back', class: "items-center justify-center w-full px-10 py-4 text-base font-semibold text-white bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
            </div>
          <% end %>
          <%= simple_form_for @registration, url: togo_inu_shitsuke_hiroba_signup_form_index_path, data: { turbo: false } do |f| %>
            <div class="inline-flex w-full overflow-hidden shadow sm:w-auto sm:mx-3 ">
              <%= f.button :submit, t('.registration'), class: "items-center justify-center w-full px-10 py-4 text-base font-semibold text-white bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %> 
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

