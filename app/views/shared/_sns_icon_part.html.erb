<% if current_user.sns_account.nil? %>
  <%= link_to send(@new_sns_account_path), data: { turbo_frame: 'sns_account_form_modal' } do %>
    <button class="px-2 py-2 text-sm font-normal mr-5 md:mr-1 tracking-wide text-gray-200 capitalize transition-colors duration-200 transform bg-sky-700 rounded-md hover:bg-sky-600 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
      <span class="mx-auto"><%= t'.register_sns_id' %></span>
    </button>
  <% end %>
<% else %>
  <p class="text-gray-600 text-sm text-center md:text-left"><%= t('.sns_account')%></p>
  <div class="flex justify-center md:justify-start">
    <%= render partial: "shared/sns_account_icons", locals: { sns_account: current_user.sns_account } %>
  </div>
  <div class="flex mt-4 mb-2 justify-center">
    <%= link_to send(@edit_sns_account_path, current_user.sns_account), data: { turbo_frame: 'sns_account_form_modal' } do %>
      <button class="px-2 py-2 text-sm font-normal mr-5 ml-5 md:mr-1 md:ml-0 tracking-wide text-gray-200 capitalize transition-colors duration-200 transform bg-sky-700 rounded-md hover:bg-sky-600 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
        <span class="mx-auto"><%= t'.update_sns_id' %></span>
      </button>
    <% end %>
    <%= link_to send(@sns_account_path, current_user.sns_account), data: { turbo_method: :delete, turbo_confirm: t('defaults.destroy_confirmation') } do %>
      <button class="px-2 py-2 text-sm font-normal mr-5 md:mr-1 tracking-wide text-gray-200 capitalize transition-colors duration-200 transform bg-red-700 rounded-md hover:bg-red-600 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
        <span class="mx-auto"><%= t'.delete_sns_id' %></span>
      </button>
    <% end %>
  </div>
<% end %>
