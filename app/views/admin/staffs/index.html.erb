<% content_for(:title, t('.title')) %>
<div class="container bg-gray-300 h-screen" data-controller="modal">
  <h2 class="mt-2 ml-2">
    <%= t('.title') %>
  </h2>
  <div class="overflow-x-auto">
    <div class="py-2 w-full px-2">
      <div class= "flex justify-end mr-2">
        <button data-action="click->modal#open" class="flex px-4 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <span class="mx-1"><%= t('defaults.signup') %></span>
        </button>
      </div>
      <%= render partial: 'admin/staffs/form', locals: { staff: @staff } %>
      <table class="mt-3 w-full">
        <thead class="bg-white border-b">
          <tr>
            <th scope="col">
              <%= simple_format(Staff.human_attribute_name(:enable_notification), class: "text-xs font-medium text-gray-900 px-1 py-2 text-left") %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-3 py-2 text-left">
              <%= Staff.human_attribute_name(:name) %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= Staff.human_attribute_name(:email) %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.delete') %>
            </th>
          </tr>
        </thead>
        <tbody>
          <%= render @staffs %>
        </tbody>
      </table>
    </div>
    <%= paginate @staffs %>
  </div>
</div>
