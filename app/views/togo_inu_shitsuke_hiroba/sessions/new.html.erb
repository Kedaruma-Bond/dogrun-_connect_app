<% content_for(:title, t('defaults.login')) %>
<div class="max-w-5xl mx-auto px-6 sm:px-6 lg:px-8 mt-5">
  <p class="text-3xl font-bold leading-7 text-center mb-10"><%= t'.dogrun' %></p>
  <div class="bg-purple-200 w-full shadow rounded p-8 sm:p-12">
    <p class="text-3xl font-bold leading-7 text-center mb-5"><%= t'.title' %></p>
    <%= simple_form_for @user, url: '/togo_inu_shitsuke_hiroba/login', method: :post, data: { turbo: false } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="max-w-lg border rounded-lg mx-auto">
        <div class="items-center flex flex-col p-4 md:p-8 mt-4">
          <div class="w-7/12">
            <%= f.label :email, label_html: { class: "font-bold leading-none" } %>
            <%= f.input :email, input_html: { class: "w-full block leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
          </div>
          <div class="mt-4 w-7/12">
            <%= f.label :password, label_html: { class: "font-bold leading-none" } %>
            <%= f.input :password, input_html: { class: "w-full block leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
          </div>
          <div class="flex items-center justify-center mt-3">
            <%= f.button :submit, t('defaults.login'), class: "mt-3 font-bold leading-none text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

