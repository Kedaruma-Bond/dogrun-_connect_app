<% content_for(:title, t('.title')) %>
<div class="flex w-full mx-auto overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800">
  <div class="hidden bg-cover lg:block lg:w-full" style="background-image: url('https://res.cloudinary.com/hryerpkcw/image/upload/f_auto,q_auto/v1661388871/admin_login_bg_n3jypb.jpg');"></div>

  <div class="w-full px-6 py-8 md:px-0 md:py-0 lg:w-1/2">
    <div class="items-center justify-between">
      <div class="bg-white min-h-screen flex flex-col justify-center items-center">
        <div class="flex w-full order-first title-font font-medium justify-center items-center text-gray-900 mb-4">
          <%= image_tag 'dogrun_logo.png', class: "rounded-full w-10 h-10 bg-indigo-200", alt: "dogrunconnect_logo" %>
          <span class="ml-3 text-xl"><%= t'defaults.app_name' %></span>
        </div>
        <div class="flex flex-col w-full max-w-md px-4 py-8 bg-white rounded-lg sm:px-6 md:px-8 lg:px-10">
          <div class="self-center mb-6 text-xl font-light text-gray-600 sm:text-2xl dark:text-white">
            <%= t('.title') %>
          </div>
          <%= render partial: 'admin/sessions/form' %>
        </div>
      </div>
    </div>
  </div>
</div>
