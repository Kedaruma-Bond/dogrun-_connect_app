<header>
  <% if logged_in? && !@dogrun_place.blank? %>
    <section>
      <%= render 'logo_click' %>
      <h2 class="text-center font-semibold text-gray-600 dark:text-gray-200 text-lg mb-2">
        <%= t('.last_entry_dogrun_place') %>
      </h2>

      <%= link_to @link, class: "flex flex-col max-w-5/6 mb-6" do %>
        <%= cl_image_tag(@dogrun_place.logo.key, gravity: :auto, quality_auto: :good, fetch_format: :auto, class: "object-scale-down h-56 w-auto", alt: @dogrun_place.name) %>
        <h3 class="text-2xl font-semibold text-gray-600 dark:text-gray-300 text-center"><%= @dogrun_place.name %></h3>
      <% end %>
    </section>
  <% else %>
    <div class="mx-auto max-w-3xl h-auto mb-3">
      <%= image_tag('https://res.cloudinary.com/hryerpkcw/image/upload/f_auto,q_auto/v1670480868/anubascj2g0mokzeya6s.png', class: "rounded-lg mx-0 md:mx-4") %>
    </div>
  <% end %>
  <section>
    <div class="container lg:flex lg:flex-row w-full items-center px-4 mx-auto text-center">
      <h1 class="basis-1/3 text-3xl font-bold tracking-tight text-gray-600 lg:items-center dark:text-gray-300">
        DogrunConnect とは
      </h1>
      <div class="basis-2/3 flex-col lg:ml-7">
        <p class="my-4 text-lg text-gray-500 text-left dark:text-gray-300">
          ドッグランの利用記録アプリです。<br>
          ドッグランを利用することをもっと楽しく便利にすることを目的にしています。
        </p>
      </div>
    </div>  
    <div class="mt-6 text-center">
      <div class="inline-flex overflow-hidden rounded-lg shadow sm:w-auto sm:mx-3">
        <%= link_to new_contacts_path, 
            class: "inline-flex items-center justify-center w-full px-5 py-3 text-base font-medium text-white bg-gradient-to-r from-gray-700 to-gray-900 hover:from-gray-600 hover:to-gray-600 sm:w-auto" do %>
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>                  
          <span class="mx-2">
            お問合せページへ
          </span>
        <% end %>
      </div>
      <p class="text-gray-500 mt-5 text-center dark:text-gray-200">
        SNSからでもお問い合わせ受付中です。
      </p>
      <div class="flex justify-center mt-3">
        <%= link_to "https://www.facebook.com/dogrunconnect/", target: "_blank", rel: "noopener noreferrer", class: "mx-4 text-gray-400 hover:text-gray-500" do %>
          <svg class="w-7 h-7 fill-current" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M2.00195 12.002C2.00312 16.9214 5.58036 21.1101 10.439 21.881V14.892H7.90195V12.002H10.442V9.80204C10.3284 8.75958 10.6845 7.72064 11.4136 6.96698C12.1427 6.21332 13.1693 5.82306 14.215 5.90204C14.9655 5.91417 15.7141 5.98101 16.455 6.10205V8.56104H15.191C14.7558 8.50405 14.3183 8.64777 14.0017 8.95171C13.6851 9.25566 13.5237 9.68693 13.563 10.124V12.002H16.334L15.891 14.893H13.563V21.881C18.8174 21.0506 22.502 16.2518 21.9475 10.9611C21.3929 5.67041 16.7932 1.73997 11.4808 2.01722C6.16831 2.29447 2.0028 6.68235 2.00195 12.002Z"></path>
          </svg>
        <% end %>

        <%= link_to "https://www.instagram.com/dogrun_connect/", target: "_blank", rel: "noopener noreferrer", class: "mx-4 text-gray-400 hover:text-gray-500" do %>
          <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
