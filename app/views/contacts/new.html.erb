<% content_for(:title, t('.title')) %>
<div class="max-w-5xl md:mx-auto px-2 pb-2 sm:mx-32 bg-purple-200 rounded-lg">
  <div class="w-full p-8 sm:p-10">
    <p class="text-3xl font-bold leading-7 text-center  text-gray-700 mb-5 mt-3"><%= t'.title' %></p>
    <%= simple_format(t('.caution'), class: "text-left text-gray-700 text-sm") %>
    <%= simple_form_for @contact, url: confirm_path, data: { turbo: false } do |f| %>
      <%= render 'shared/error_messages', object: f.object %> 
      <div class="md:flex items-center mt-6">
        <div class="w-full md:w-1/2 flex flex-col"> 
          <%= f.label :name, label_html: { class: "font-bold leading-none text-gray-700" } %>
          <%= f.input :name, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
        </div>
        <div class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
          <%= f.label :email, label_html: { class: "font-bold leading-none text-gray-700" } %>
          <%= f.input :email, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, error: false %>
        </div>
      </div>
      <div class="w-full flex flex-col mt-8">
        <%= f.label :message, label_html: { class: "font-bold leading-none text-gray-700"} %>
        <%= f.text_area :message, class: "h-52 text-base leading-none text-gray-900 p-3 focus:oultine-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" %>
      </div>
      <div class="flex items-center justify-center w-full">
          <%= f.button :submit, t('defaults.confirm'), class: "mt-9 font-bold leading-none text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
      </div>
    <% end %>
  </div>
</div>
