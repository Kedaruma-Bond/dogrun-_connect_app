<% content_for(:title, t('.title')) %>
<div class="w-full mx-auto px-6 sm:px-3 lg:px-0">
  <div class="bg-purple-200 w-full shadow rounded p-8 sm:p-10">
    <p class="text-2xl md:text-3xl font-bold mb-5 text-center">
      <%= t'.title' %>
    </p>
    <section class="text-gray-600 body-font">
      <div class="px-3 py-3 mx-auto flex flex-col">
        <div class="flex flex-col sm:flex-row mt-5">
          <div class="sm:w-1/3 sm:pr-8 sm:py-2 text-center">
            <div class="w-40 h-auto mb-3 md:md-0 inline-flex">
              <%= dogrun_logo(@dogrun_place) %>
            </div>
            <div class="flex flex-col items-center justify-center mt-3">
              <h2 class="text-center font-bold text-gray-600 text-2xl">
                <%= @dogrun_place.name %>
              </h2>
              <div class="w-32 h-1 bg-gray-200 rounded mt-2 mb-4"></div>
              <div class="flex md:hidden items-center mt-2 flex-row justify-center text-left">
                <%= link_to edit_admin_dogrun_place_path(@dogrun_place) do %>
                  <button class="flex items-center px-2 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-200 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                    </svg>
                    <span class="mx-1 text-lg"><%= t'defaults.edit' %></span>
                  </button>
                <% end %>
              </div>
              <h2 class="text-gray-600 text-base mt-3 sm:mt-0">
                <% if @dogrun_place.pref.blank? %>
                  -
                <% else %>
                  <%= @dogrun_place.pref.name %>
                <% end %>
              </h2>
              <p class="text-sm mt-3"><%= t('defaults.business_time') %></p>
              <h2 class="flex text-gray-600 text-base mt-3">
                <% if @dogrun_place.opening_time.blank? || @dogrun_place.closing_time.blank? %>
                  -
                <% else %>
                  <%= l @dogrun_place.opening_time, format: :short2 %>
                  ã€œ
                  <%= l @dogrun_place.closing_time, format: :short2 %>
                <% end %>
              </h2>
              <p class="text-sm mt-3"><%= t('defaults.web_site') %></p>
              <h2 class="flex text-gray-600 text-base mt-3">
                <% if @dogrun_place.web_site.blank? %>
                -
                <% else %>
                  <%= link_to @dogrun_place.web_site, target: :_blank, rel: "noopener noreferrer" do %>
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                    </svg>
                  <% end %>
                <% end %>
              </h2>
            </div>
          </div>
          <div class="sm:w-2/3 sm:pl-8 sm:py-2 sm:border-l border-gray-200 sm:border-t-0 border-t mt-4 pt-4 sm:mt-0 text-center sm:text-left">
            <div class="flex flex-col flex-shrink-0 items-center md:items-start md:justify-center mb-3 md:mb-6">
              <p class="text-gray-600 text-xs font-light">
                <%= DogrunPlace.human_attribute_name(:address) %>
              </p>
              <h1 class="mt-1 text-base md:text-lg text-gray-700">
                <%= @dogrun_place.address %>
              </h1>
            </div>
            <div class="flex flex-col flex-shrink-0 items-center md:items-start md:justify-center mb-3 md:mb-6">
              <p class="text-gray-600 text-xs font-light">
                <%= DogrunPlace.human_attribute_name(:description) %>
              </p>
              <h1 class="mt-1">
                <%= simple_format(@dogrun_place.description, class: "text-base md:text-lg text-gray-700 text-left") %>
              </h1>
            </div>
            <div class="flex flex-col flex-shrink-0 items-center md:items-start md:justify-center mb-3 md:mb-6">
              <p class="text-gray-600 text-xs font-light">
                <%= DogrunPlace.human_attribute_name(:usage_fee) %>
              </p>
              <h1 class="mt-1">
                <%= simple_format(@dogrun_place.usage_fee, class: "text-base md:text-lg text-gray-700") %>
              </h1>
            </div>
            <div class="flex flex-col flex-shrink-0 items-center md:items-start md:justify-center mb-3 md:mb-6">
              <p class="text-gray-600 text-xs font-light">
                <%= DogrunPlace.human_attribute_name(:site_area) %>
              </p>
              <h1 class="mt-1">
                <%= simple_format(@dogrun_place.site_area, class: "text-base md:text-lg text-gray-700") %>
              </h1>
            </div>
            <div class="flex flex-col flex-shrink-0 items-center md:items-start md:justify-center mb-3 md:mb-6">
              <p class="text-gray-600 text-xs font-light">
                <%= Facility.human_attribute_name(:name) %>
              </p>
              <div class="flex flex-wrap">
                <% @dogrun_place.facilities.each do |facility| %>
                  <span class="whitespace-nowrap leading-none text-white py-2 px-2 bg-blue-700 rounded ml-2 mt-2"><%= dogrun_facility_view(facility.name) %></span>
                <% end %>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>
    <div class="hidden md:flex items-center mt-1 flex-row justify-center text-left">
      <%= link_to edit_admin_dogrun_place_path(@dogrun_place) do %>
        <button class="flex items-center px-2 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-200 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
          <span class="mx-1 text-lg"><%= t'defaults.edit' %></span>
        </button>
      <% end %>
    </div>
  </div>
</div>
