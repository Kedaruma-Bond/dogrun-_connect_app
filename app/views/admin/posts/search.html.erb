<% content_for(:title, t('.title')) %>
<div class="container bg-gray-300 flex flex-col" data-controller="form-modal">
  <h2 class="mt-2 ml-2">
    <%= t('.title') %>
  </h2>
  <div class="overflow-x-auto">
    <div class="py-2 w-full px-2">
      <div class="flex mb-3">
        <div class="flex-col">
          <p class="text-black ml-2"><%= t('defaults.on_board') %></p>
          <div class="ml-5 px-2 py-2 rounded-xl border-dashed border-2 border-amber-500">
            <% if !@publishing_post.blank? %>
              <%= @publishing_post[0].post_viewing %>
            <% else %>
              <%= t('defaults.nothing_on_board') %>
            <% end %>
          </div>
        </div>
        <div class="flex-col">
          <p class="text-black"><%= t('defaults.publishing_limit') %></p>
          <h3>
            <% if !@publishing_post.blank? %>
              <%= l @publishing_post.limit, format: :long2 %>
            <% else %>
              -
            <% end %>
          </h3>
        </div>
      </div>
      <%= render partial: 'admin/posts/search_form' %>
      <div class= "flex justify-end mr-1">
        <button data-action="click->form-modal#open" class="mt-2 flex px-4 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <span class="mx-1"><%= t('defaults.create_post') %></span>
        </button>
      </div>
      <h2 class="text-gray-700 text-sm flex items-end justify-end mr-7 mt-3">
        <%= t('defaults.search_results_is')%>
          <span class="text-xl mr-2 ml-2">
            <%= @posts_results.nil? ? 0 : @posts_results.total_count %> 
          </span>
        <%= t('defaults.search_results_unit') %>
      </h2>
      <%= render partial: 'admin/posts/form', locals: { post: @post } %>
      <table class="mt-3 w-full">
        <thead class="bg-white border-b">
          <tr>
            <th scope="col">
              <%= simple_format(Post.human_attribute_name(:publish_status), { class: 'text-sm font-medium text-gray-900 px-3 text-center' }, { wrapper_tag: "div" } ) %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.posted_time') %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.posted_by') %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= Post.human_attribute_name(:post_type) %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.sns_type') %>
            </th>
            <!-- 
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.preview_post') %>
            </th> -->
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.edit') %>
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
              <%= t('defaults.delete') %>
            </th>
          </tr>
        </thead>
        <tbody>
          <%= render @posts_results %>
        </tbody>
      </table>
    </div>
    <%= paginate @posts_results %>
  </div>
</div>
