<%= turbo_stream_from @dogrun_place, "admin_registration_numbers_index" %>
<% content_for(:title, t('.title')) %>
<%= turbo_frame_tag "dog_profile_modal" %>
<%= turbo_frame_tag "exit_command_selector_modal" %>
<%= turbo_frame_tag "registration_number_edit_modal" %>
<div class="container bg-gray-300 w-full flex flex-col">
  <div class="py-2 px-2">
    <h2 class="mt-2 ml-2 text-xl font-bold"><%= t('.title') %></h2>
    <%= render partial: 'search_form' %>
    <div class="overflow-x-auto">
      <div class="table rounded-lg bg-gray-100 border-collapse mt-3 w-full">
        <%= render partial: "registration_number_index_table_header" %>
        <%= turbo_frame_tag dom_id(@dogrun_place, "admin_registration_numbers"), class: "table-row-group" do %>
          <%= render @registration_numbers %>
        <% end %>
      </div>
    </div>
    <%= render partial: "shared/pagination", locals: { pagy: @pagy } %>
  </div>
</div>
