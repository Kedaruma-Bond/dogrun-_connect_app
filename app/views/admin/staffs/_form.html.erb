<%= form_with(model: @staff, id: "staff_form", url: { controller: 'staffs', action: 'create' }, data: { controller: "disable", "disable-with-value": t('defaults.processing'), form_modal_target: 'form' }) do |f| %>
  <%= render 'shared/error_messages_for_modal', object: f.object %>
  <div class="w-full flex flex-col mt-4 text-gray-700 font-semibold">
    <div class="w-full flex flex-col"> 
      <%= f.label Staff.human_attribute_name(:name), class: "leading-none" %>
      <%= f.text_field :name, class: "font-normal block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" %>
    </div>
    <div class="w-full flex flex-col mt-7">
      <%= f.label Staff.human_attribute_name(:email), class: "leading-none" %>
      <%= f.email_field :email, class: "font-normal block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" %>
    </div>
    <%= f.hidden_field :dogrun_place_id, value: current_user.dogrun_place_id %>
  </div>
  <div class="flex items-center justify-center mt-3">
    <%= f.submit t('defaults.registration'), class: "mt-3 font-bold leading-normal text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
  </div>
<% end %> 
