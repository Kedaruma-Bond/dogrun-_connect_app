<dialog data-sns-post-message-modal-target="modal"
  class="p-1 rounded-lg bg-purple-200 shadow-xl w-4/5 md:w-1/3 max-h-screen backdrop:bg-gray-700 backdrop:bg-opacity-50 open:animate-fade-in open:backdrop:animate-fade-in"
  >
  <button type="button" data-action="sns-post-message-modal#close" class="float-right">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
  </button>
  <div class="px-2 py-5">
    <div class="px-2 py-2 border-b border-stone-500 sm:px-6 mb-3">
      <h3 class="text-lg leading-6 font-bold text-gray-900"><%= t('.title') %></h3>
    </div>
    <%= simple_format(t('.body'), class: "text-gray-700 text-normal text-left break-normal")%>
  </div>
</dialog>
