<%= form_with(url: send(login_path), scope: :session, data: { controller: "disable", "disable-with-value": t('defaults.processing') } ) do |f| %>
  <div class="w-full flex flex-col mt-2 text-gray-700">
    <div class="md:flex items-center">
      <div class="w-full md:w-1/2 flex flex-col">
        <%= f.label :email, t('defaults.email'), class: "font-semibold" %>
        <%= f.email_field :email, class: "w-full sm:w-11/12 block leading-none focus:outline-none focus:border-blue-700 mt-1 bg-gray-100 border rounded border-gray-200" %>
      </div>
      <div class="w-full md:w-1/2 flex flex-col mt-3 md:mt-0">
        <%= f.label :password, t('defaults.password'), class: "font-semibold" %>
        <%= f.password_field :password, class: "w-full sm:w-11/12 block leading-none text-gray-900 focus:outline-none focus:border-blue-700 mt-1 bg-gray-100 border rounded border-gray-200" %>
        <div class="hidden">
          <%= check_box_tag :remember, params[:remember], true %>
          <%= label_tag t('defaults.remember') %>
        </div>
      </div>
    </div>
    <div class="flex mt-5 justify-center">
      <%= t('defaults.password_reset') %>
      <%= link_to new_password_reset_path, target: "_blank", rel: "noopener noreferrer", class: "ml-2 font-bold text-blue-600 hover:text-blue-700" do %>
        <%= t('defaults.here') %>
      <% end %>
    </div>
    <div class="flex items-center justify-center mt-3">
      <%= f.button data: { "disable-target": "submitButton" },
        class: "disabled:px-[32px] disabled:cursor-not-allowed disabled:bg-emerald-500 flex mt-3 font-bold text-white py-4 px-10 bg-emerald-400 rounded-full hover:bg-emerald-500 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
        <%= spinner_icon_for_form_disable_button %>
        <div data-disable-target="buttonText" class="flex">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M3 3a1 1 0 011 1v12a1 1 0 11-2 0V4a1 1 0 011-1zm7.707 3.293a1 1 0 010 1.414L9.414 9H17a1 1 0 110 2H9.414l1.293 1.293a1 1 0 01-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-base font-semibold ml-2">
            <%= t('defaults.login') %>
          </span>
        </div>
      <% end %>
    </div>
    <div class="flex mt-3 justify-center">
      <%= t('defaults.signup_is') %>
      <%= link_to send(signup_path), target: "_blank", rel: "noopener noreferrer", class: "ml-2 text-blue-600 hover:text-blue-700 font-bold" do %>
        <%= t('defaults.here') %>
      <% end %>
    </div>
  </div>
<% end %>
