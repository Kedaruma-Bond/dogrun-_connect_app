<%= form_with model: @encount_dog, url: {controller: "encount_dogs", action: "update"},  
  data: { controller: 'disable', "disable-with-value": t('defaults.updating') } do |f| %>
  <%= render 'shared/error_messages_for_modal', object: f.object %>
  <div class="text-gray-600 w-full mt-2">
      <%= f.label :color_marker, class: "font-bold leading-none" %>
      <%= f.select :color_marker, EncountDog.color_markers_i18n.invert, {include_blank: t('.select_color_marker')}, { class: "block w-full leading-1 text-gray-900 p-3 focus:outline-none focus:border-blue-700 bg-gray-100 rounded border border-gray-200" } %>
  </div>
  <div class="text-gray-600 w-full flex flex-col mt-4">
    <%= f.label :memo, class: "font-bold leading-none" %>
    <%= f.text_area :memo, placeholder: t('.memo_placeholder'), class: "h-32 block w-full p-3 mt-2 text-gray-800 font-normal bg-white bg-clip-padding rounded border border-solid border-gray-300 transition ease-in-out m-0 focus:text-gray-700 focus:bg-gray-100 focus:border-blue-600 focus:outline-none placeholder-gray-400" %>
  </div>
  <div class="flex justify-center mt-3 sm:mt-0 sm:mx-3">
    <%= f.button data: { "disable-target": "submitButton" },
        class: "flex mt-2 font-bold leading-normal text-base text-white py-4 px-10 bg-emerald-500 rounded hover:bg-emerald-400 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none disabled:cursor-not-allowed disabled:bg-emerald-600" do %>
      <%= spinner_icon_for_form_disable_button %>
      <span data-disable-target="buttonText"><%= t('defaults.update') %></span>
    <% end %>
  </div>
<% end %>
