<%= tag.dialog data: { "message-modal-target": "modal" },
  class: "message-modal" do %>
  <%= message_modal_close_button %>
  <div class="px-2 py-3">
    <div class="px-4 sm:px-6">
      <h3 class="text-xl font-bold text-gray-700 my-2"><%= t('.title') %></h3>
    </div>
    <div class="w-full h-1 bg-gray-700 rounded mt-1 mb-2"></div>
    <%= simple_format(t('.body'), class: "text-gray-700 text-base font-normal text-left break-normal")%>
  </div>
<% end %>
