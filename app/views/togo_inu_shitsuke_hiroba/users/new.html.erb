<% content_for(:title, t('.title')) %>
<div class="max-w-5xl mx-auto px-6 sm:px-6 lg:px-8 mt-5">
  <p class="text-3xl font-bold leading-7 text-center mb-10"><%= t'.dogrun' %></p>
  <div class="bg-purple-200 w-full shadow rounded p-8 sm:p-12">
    <p class="text-3xl font-bold leading-7 text-center mb-10"><%= t'.title' %></p>
    <%= simple_form_for @user, url: 'togo_inu_shitsuke_hiroba_confirm', data: { turbo: false } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="w-full flex flex-col mt-8">
        <div class="w-full flex flex-col"> 
          <%= f.label :name, label_html: { class: "font-bold leading-none" } %>
          <%= f.input :name, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, required: true, error: false %>
        </div>
        <div class="w-full flex flex-col mt-7">
            <%= f.label :email, label_html: { class: "font-bold leading-none" } %>
            <%= f.input :email, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, required: true, error: false %>
        </div>
            <%= f.hidden_field :dogrun_place, value: 0 %>
        <div class="w-full flex flex-col mt-7">
            <%= f.label :number_of_dogs, label_html: { class: "font-bold leading-none" } %>
            <%= f.input :number_of_dogs, collection: 1..10, input_html: { class: "block py-3 pr-10 leading-none text-gray-900 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, required: true, error: false %>
        </div>
        <div class="w-full flex flex-col mt-7">
            <%= f.label :password, label_html: { class: "font-bold leading-none" } %>
            <%= f.input :password, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint_html: { class: "text-sm block;"}, hint: 'パスワードは6文字以上にしてください', required: true, error: false %>
        </div>
        <div class="w-full flex flex-col mt-7">
            <%= f.label :password_confirmation, label_html: { class: "font-bold leading-none" } %>
            <%= f.input :password_confirmation, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" }, label: false, hint: false, required: true, error: false %>
        </div>
      </div>
      <div class="flex items-center justify-center mt-7">
        <%= f.button :submit, t('.next'), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      </div>
    <% end %> 
  </div>
</div>
