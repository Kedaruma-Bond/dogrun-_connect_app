<% content_for(:title, @title) %>
<div class="mx-auto px-1 sm:px-6 lg:px-8 py-5 mx-4 bg-purple-200 rounded-lg">
  <h1 class='text-3xl text-gray-700 font-semibold text-center mb-3'>
    <%= simple_format(@title) %>
  </h1>
  <%= render 'search_form' %>
  <p class="text-center md:hidden text-xs text-gray-600 mt-3"><%= t('defaults.thumbnail_tap') %></p>
  <p class="text-center md:hidden text-xs text-gray-600"><%= t('defaults.slide_available') %></p>
  <div class="container w-full sm:p-10">
    <div class="block w-full overflow-x-auto">
      <table class="table-auto items-center w-full bg-transparent border-collapse">
        <thead>
          <tr>
            <th class="pl-6 md:pl-12 text-sm whitespace-nowrap font-semibold bg-purple-200 text-gray-600 border-b border-gray-700">
              <%= simple_format(t('defaults.thumbnail')) %>
            </th>
            <th class="pl-6 md:pl-12 text-sm whitespace-nowrap font-semibold bg-purple-200 text-gray-600 border-b border-gray-700">
              <%= simple_format(t('defaults.dog_name')) %>
            </th>
            <th class="pl-6 md:pl-12 text-sm whitespace-nowrap font-semibold bg-purple-200 text-gray-600 border-b border-gray-700">
              <%= t('defaults.date') %>
            </th>
            <th class="pl-6 md:pl-12 text-sm whitespace-nowrap font-semibold bg-purple-200 text-gray-600 border-b border-gray-700">
              <%= simple_format(t('defaults.entry_at')) %>
            </th>
            <th class="pl-6 md:pl-12 text-sm whitespace-nowrap font-semibold bg-purple-200 text-gray-600 border-b border-gray-700">
              <%= simple_format(t('defaults.exit_at')) %>
            </th>
          </tr>
        </thead>
        <tbody>
          <%= content %>
        </tbody>
      </table>
      <%= render partial: "shared/pagination", locals: { pagy: @pagy } %>
    </div>
  </div>
</div>
