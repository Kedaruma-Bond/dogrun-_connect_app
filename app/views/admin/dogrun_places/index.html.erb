<% content_for(:title, t('.title')) %>
<div class="container bg-gray-300 w-full flex flex-col">
  <div class="py-2 px-2">
  <h1 class="mt-2 ml-2 text-xl font-bold"><%= t('.title') %></h1>
  <div class="ml-2">
    <%= link_to new_admin_dogrun_place_path, class: "flex justify-center mt-4 w-4/5 sm:w-2/3 md:w-1/3 lg:w-1/5 mr-4 px-2 py-2 h-10 font-medium text-center tracking-wide text-white bg-sky-600 rounded-md hover:bg-sky-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" do %>
      <svg class="text-white w-6 h-6 mr-2" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 10.5v6m3-3H9m4.06-7.19l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z"></path>
      </svg>
      <%= t('.dogrun_place_create')%>
    <% end %>
  </div>
  <div class="overflow-x-auto">
    <div class="table rounded-lg bg-gray-100 border-collapse mt-3 w-full">
      <div class="table-header-group border-gray-700 border-b">
        <div class="table-row text-sm font-medium whitespace-nowrap text-gray-900 text-center h-[80px]">
          <div class="table-cell px-6 align-middle">
            <%= t('defaults.edit') %>
          </div>
          <div class="table-cell px-6 align-middle">
            ID
          </div>
          <div class="table-cell px-6 align-middle">
            logo
          </div>
          <div class="table-cell px-6 align-middle text-left">
            <%= DogrunPlace.human_attribute_name(:name) %>
          </div>
          <div class="table-cell px-6 align-middle">
            <%= DogrunPlace.human_attribute_name(:prefecture_code) %>
          </div>
          <div class="table-cell px-6 align-middle text-left">
            <%= DogrunPlace.human_attribute_name(:address) %>
          </div>
          <div class="table-cell px-6 align-middle">
            <%=t('defaults.business_time') %>
          </div>
          <div class="table-cell align-middle">
            <%= simple_format(DogrunPlace.human_attribute_name(:web_site), class: "text-sm font-medium text-gray-900 px-6 py-4") %>
          </div>
          <div class="table-cell px-6 align-middle">
            <%=t('defaults.sns') %>
          </div>
          <div class="table-cell px-6 align-middle text-left">
            <%= DogrunPlace.human_attribute_name(:description) %>
          </div>
          <div class="table-cell px-6 align-middle">
            <%= DogrunPlace.human_attribute_name(:usage_fee) %>
          </div>
          <div class="table-cell px-6 align-middle">
            <%= DogrunPlace.human_attribute_name(:site_area) %>
          </div>
          <div class="table-cell px-6 align-middle text-left">
            <%= Facility.human_attribute_name(:name) %>
          </div>
        </div>
      </div>
      <div class="table-row-group">
        <%= render @dogrun_places %>
      </div>
    </div>
    <%= render partial: "shared/pagination", locals: { pagy: @pagy } %>
  </div>
</div>
