<% content_for(:title, t('.title')) %>
<div class="max-w-5xl mx-auto px-3 sm:px-6 lg:px-8 mt-5">
  <div class="bg-purple-200 w-full shadow rounded p-8 sm:p-12">
    <%= simple_format(t('.title'), { class: 'text-xl font-bold leading-7 text-center mb-5' }, { wrapper_tag: "div" } ) %>
    <div class="w-28 h-28 mb-3 md:mb-0 mx-auto">
      <%= encount_dog_thumbnail(@encount_dog.dog, @encount_dog) %>
    </div>
    <div class="w-full md:w-1/3 mt-4">
      <p class="text-gray-600 font-bold leading-none"><%= t('.encount_dog_name') %></p>
      <p class="text-gray-800 mt-2 text-xl font-bold leading-none"><%= @encount_dog.dog.name %></p>
    </div>
    <%= form_with model: @encount_dog, url: {controller: "encount_dogs", action: "update"}, data: { controller: 'disable', "disable-with-value": t('defaults.updating'), turbo: false } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="text-gray-600 w-full md:w-1/3 mt-4">
          <%= f.label :color_marker, class: "font-bold leading-none" %>
          <%= f.select :color_marker, EncountDog.color_markers_i18n.invert, {include_blank: t('.select_color_marker')}, { class: "block w-full leading-1 text-gray-900 p-3 focus:outline-none focus:border-blue-700 bg-gray-100 rounded border border-gray-200" } %>
      </div>
      <div class="text-gray-600 w-full flex flex-col mt-4">
        <%= f.label :memo, class: "font-bold leading-none" %>
        <%= f.text_area :memo, placeholder: t('.memo_placeholder'), class: "h-32 block w-full p-3 mt-2 text-gray-800 font-normal bg-white bg-clip-padding rounded border border-solid border-gray-300 transition ease-in-out m-0 focus:text-gray-700 focus:bg-gray-100 focus:border-blue-600 focus:outline-none placeholder-gray-400" %>
      </div>
      <div class="sm:flex mt-9">
        <div class="flex justify-center sm:ml-0 sm:mx-3">
          <%= link_to togo_inu_shitsuke_hiroba_encount_dogs_path, class: "h-11 mt-3 font-bold leading-none text-white py-4 px-2 bg-rose-700 rounded hover:bg-rose-600 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
            <span class="py-4 px-10"><%= t('defaults.back') %></span>
          <% end %>
        </div>
        <div class="flex justify-center mt-3 sm:mt-0 sm:mx-3 sm:pt-3">
          <%= f.submit t('defaults.update'), class: "h-11 font-bold leading-none text-white py-2 px-12 bg-emerald-400 rounded hover:bg-emerald-500 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none disabled:cursor-not-allowed disabled:bg-emerald-300" do %>
            <span><%= t'defaults.post' %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
