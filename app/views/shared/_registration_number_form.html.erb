<div class="mt-5">
  <div class="text-amber-700 font-medium text-center">
    <%= t("local.registration_numbers.form.registration_is_done_one_by_one") %>
  </div>
  <ul list-style="none" class="mx-auto mt-5 flex flex-col">
    <% dogs.each do |dog| %>
      <li class="mb-5 w-[215px] mx-auto">
        <label for=<%= dog.id %> class="flex mb-2">
          <%= tag.input id: dog.id, class: "scale-125 rounded-full mt-4", type: "radio", value: dog.id, name: "select_dog", form: "registration_number_form" %>
          <div class="w-12 h-12 ml-3">
            <%= dog_thumbnail(dog) %>
          </div>
          <div class="text-left leading-3 text-gray-700 text-xl font-bold ml-3 my-auto">
            <%= dog.name %>
          </div>
        </label>
      </li>
    <% end %>
  </ul>
  <%= form_with model: registration_number, url: send(registration_numbers_path), method: :post, id: "registration_number_form", data: { turbo: false } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="md:flex items-center justify-center">
      <div class="w-full md:w-1/2 flex flex-col"> 
        <%= f.label :registration_number, registration_number_notation, class: "font-semibold text-gray-700 leading-none" %>
        <%= f.text_field :registration_number, class: "block w-full sm:w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" %>
      </div>
    </div>
    <div class="flex mt-7 justify-center text-sm">
      <%= f.check_box :agreement, checked: false, label: false, error: false, class: "bg-gray-100 rounded border-gary-300 focus:ring-blue-500 focus:ring-2 mt-1" %>
      <%= f.label :agreement, class: "font-semibold text-gray-500" do %>
        &nbsp;
        <%= dogrun_place.name %>
        の
        <%= link_to dogrun_terms_of_service_page, target: "_blank", rel: "noopener noreferrer", class: "text-gray-600 hover:text-gray-400" do %>
          <%= t('defaults.terms_of_service') %>
        <% end %>
        <br>
        &nbsp; に同意する 
      <% end %>
    </div>
    <div class="w-full flex flex-col mt-3 text-gray-700">
      <div class="flex items-center justify-center mt-3">
        <%= button_tag type: "submit", class: "mt-3 font-bold leading-normal text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
          <%= t('defaults.register') %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
