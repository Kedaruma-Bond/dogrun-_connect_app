<%= turbo_frame_tag dom_id(dogrun_place, "entry_dog_#{dog.id}"), class: "w-full" do %>
  <div class="flex mx-auto bg-transparent text-gray-200 mb-1 animate-slide-in-top">
    <div class="w-1/3 mx-auto my-auto ml-1">
      <%= link_to send(dog_profile_path, dog) do %>
        <div class="w-28 h-28 flex">
          <%= dog_thumbnail_for_top(dog, current_user) %>
          <%= birthday_marker(dog) %>
        </div>
      <% end %>
    </div>

    <div class="w-3/6 py-2 ml-7">
      <div class="text-2xl font-semibold text-left">
        <%= dog.name %>
      </div>
      <% if dog.filming_approval? %>
        <div class="flex">
          <%= render partial: "shared/filming_approval" %>
          <% if dog.sns_post_approval? %>
            <%= render partial: "shared/sns_post_approval" %>
          <% end %>
        </div>
      <% else %>
        <div class="h-[24px]"></div>
      <% end %>

      <div class="flex mt-2">
        <div class="flex-col text-base ml-1">
          entry at
          <%= l Entry.where(dog: dog).last.entry_at, format: :short2 %>
        </div>
      </div>
    </div>
    <div class="w-1/6 my-auto">
      <div data-controller="form-modal" class="table-cell align-middle animate-slide-in-fwd-top">
        <% if !dog.owner_comment.blank? %>
          <div data-action="click->form-modal#open">
            <svg class="w-7 h-7 mx-auto text-gray-200" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <%= render partial: 'shared/owner_comment_modal', locals: { dog: dog } %>
        <% else %>
          <div class="pl-2">-</div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
