<% content_for(:title, @title) %>
<div class="max-w-5xl mx-3 md:mx-auto lg:px-8">
  <div class="bg-purple-200 w-full shadow rounded p-8 sm:p-12">
    <%= simple_format(@title, { class: 'text-2xl font-bold leading-7 text-center mb-4 text-gray-700' }, { wrapper_tag: "div" } ) %>
    <div class="w-28 h-28 mb-3 md:mb-0 mx-auto">
      <%= encount_dog_thumbnail(@encount_dog.dog, @encount_dog) %>
    </div>
    <div class="w-full md:w-1/3 mt-4">
      <p class="text-gray-600 font-bold leading-none"><%= t('local.encount_dogs.edit.encount_dog_name') %></p>
      <p class="text-gray-800 mt-2 text-xl font-bold leading-none"><%= @encount_dog.dog.name %></p>
    </div>
    <%= content %>
  </div>
</div>
