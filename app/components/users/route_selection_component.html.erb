<% content_for(:title, @title) %>
<%= turbo_frame_tag "article_post_form_modal" %>
<div class="max-w-5xl md:mx-auto sm:px-6 lg:px-8 bg-purple-200 rounded-lg">
  <div class="w-full p-2 sm:p-12">
    <p class="my-2">
      <%= simple_format(t('local.users.route_selection.choose_route_for_registration'), class: 'text-xl md:text-3xl font-bold text-gray-700 text-center') %>
    </p>
    <div class="flex flex-col mt-3">
      <div class="bg-teal-500 flex flex-col rounded-lg">
        <h1 class="mt-4 mb-2 text-gray-200 font-semibold text-center text-2xl md:text-3xl"><%= t('local.users.route_selection.fully_route') %></h1>
        <div class="px-8 mb-3"><%= simple_format(t('local.users.route_selection.explain_of_fully_route'), class: 'text-base md:text-xl font-medium text-gray-200' ) %></div>
        <details data-controller="accordion" class="bg-emerald-100 mx-6 px-3 py-3 rounded-lg">
          <summary data-accordion-target="summary" data-action="click->accordion#toggle" class="flex justify-center hover:cursor-pointer">
            <h1 class="flex text-base font-medium text-gray-700">
              <%= t('local.users.route_selection.require_information')%>
            </h1>
          </summary>
          <div data-accordion-target="content">
            <p class="text-gray-500 text-xs md:text-sm text-center mt-1 mb-2"><%= t('local.users.route_selection.use_as_checklist') %></p>
            <form class="ml-7 md:ml-60 text-gray-700">
              <% if @current_user.nil? %>
                <input class="rounded-full mr-1" type="checkbox" name="option1" id="option1">
                <label class="text-sm font-light" for="option1"><%= User.human_attribute_name(:name) %></label><br>
                <input class="rounded-full mr-1" type="checkbox" name="option2" id="option2">
                <label class="text-sm font-light" for="option2"><%= User.human_attribute_name(:email) %></label><br>
                <input class="rounded-full mr-1" type="checkbox" name="option3" id="option3">
                <label class="text-sm font-light" for="option3"><%= User.human_attribute_name(:password) %></label><br>
                <input class="rounded-full mr-1" type="checkbox" name="option4" id="option4">
                <label class="text-sm font-light" for="option4"><%= t('defaults.address') %></label><br>
                <input class="rounded-full mr-1" type="checkbox" name="option5" id="option5">
                <label class="text-sm font-light" for="option5"><%= UserDetail.human_attribute_name(:phone_number) %></label><br>
                <p class="text-gray-500 text-xs md:text-sm text-left"><%= t('local.users.route_selection.information_of_dog_below') %></p>
              <% end %>
              <input class="rounded-full mr-1" type="checkbox" name="option6" id="option6">
              <label class="text-sm font-light" for="option6"><%= Dog.human_attribute_name(:name) %></label><br>
              <input class="rounded-full mr-1" type="checkbox" name="option7" id="option7">
              <label class="text-sm font-light" for="option7"><%= t('local.users.route_selection.photo_of_thumbnail') %></label><br>
              <input class="rounded-full mr-1" type="checkbox" name="option8" id="option8">
              <label class="text-sm font-light" for="option8"><%= t('local.users.route_selection.whether_castrated') %></label><br>
              <input class="rounded-full mr-1" type="checkbox" name="option9" id="option9">
              <label class="text-sm font-light" for="option9"><%= t('defaults.birthday') %></label><br>
              <input class="rounded-full mr-1" type="checkbox" name="option10" id="option10">
              <label class="text-sm font-light" for="option10"><%= Dog.human_attribute_name(:breed) %></label><br>
              <input class="rounded-full mr-1" type="checkbox" name="option11" id="option11">
              <label class="text-sm font-light" for="option11"><%= Dog.human_attribute_name(:sex) %></label><br>
              <input class="rounded-full mr-1" type="checkbox" name="option12" id="option12">
              <label class="text-sm font-light" for="option12"><%= Dog.human_attribute_name(:weight) %></label><br>
              <input class="rounded-full mr-1" type="checkbox" name="option13" id="option13">
              <label class="text-sm font-light" for="option13"><%= t('local.users.route_selection.photo_of_rabies_vaccination_certificate') %></label><br>
              <input class="rounded-full mr-1" type="checkbox" name="option14" id="option14">
              <label class="text-sm font-light" for="option14"><%= t('local.users.route_selection.photo_of_mixed_vaccination_certificate') %></label><br>
              <input class="rounded-full mr-1" type="checkbox" name="option15" id="option15">
              <label class="text-sm font-light" for="option15"><%= t('local.users.route_selection.photo_of_license_plate') %></label><br>
              <% if !@dogrun_place.registration_card.blank? %>
                <p class="text-gray-500 text-xs md:text-sm text-left"><%= I18n.t('local.users.route_selection.if_you_have', registration_card: @notation_of_registration_card) %></p>
                <input class="rounded-full mr-1" type="checkbox" name="option16" id="option16">
                <label class="text-sm font-light" for="option16"><%= @notation_of_registration_number %></label><br>
              <% end %>
            </form>
          </div>
        </details>
        <% if @current_user.nil? %>
          <%= link_to send(@fully_route_path), class: "my-3 mx-auto text-center items-center w-1/2 md:w-1/3 px-2 py-2 font-medium tracking-wide text-white bg-green-500 rounded-md hover:bg-green-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" do %>
            <span><%= t('local.users.route_selection.to_fully_route') %></span>
          <% end %>
        <% else %>
          <% if !@dogrun_place.registration_card.blank? %>
            <%= link_to send(@fully_form_selection_path), class: "my-3 mx-auto text-center items-center w-1/2 md:w-1/3 px-2 py-2 font-medium tracking-wide text-white bg-green-500 rounded-md hover:bg-green-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" do %>
              <span><%= t('local.users.route_selection.to_fully_route') %></span>
            <% end %>
          <% else %>
            <%= link_to send(@fully_not_have_registration_card_path), class: "my-3 mx-auto text-center items-center w-1/2 md:w-1/3 px-2 py-2 font-medium tracking-wide text-white bg-green-500 rounded-md hover:bg-green-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" do %>
              <span><%= t('local.users.route_selection.to_fully_route') %></span>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="bg-blue-500 flex flex-col rounded-lg mt-3">
        <h1 class="mt-4 mb-2 text-gray-200 font-semibold text-center text-2xl md:text-3xl"><%= t('local.users.route_selection.minimum_route') %></h1>
        <div class="px-8 mb-3"><%= simple_format(t('local.users.route_selection.explain_of_minimum_route'), class: 'text-base md:text-xl font-medium text-gray-200' ) %></div>
        <div class="px-8 mb-3 text-sm md:text-lg font-medium text-rose-200"><%= t('local.users.route_selection.note_of_minimum_route') %></div>
        <details data-controller="accordion" class="bg-cyan-100 mx-6 px-3 py-3 rounded-lg">
          <summary data-accordion-target="summary" data-action="click->accordion#toggle" class="flex justify-center hover:cursor-pointer">
            <h1 class="flex text-base font-medium text-gray-700">
              <%= t('local.users.route_selection.require_information')%>
            </h1>
          </summary>
          <div data-accordion-target="content">
            <p class="text-gray-500 text-xs md:text-sm text-center mt-1 mb-2"><%= t('local.users.route_selection.use_as_checklist') %></p>
            <form class="ml-7 md:ml-60 text-gray-700">
              <% if @current_user.nil? %>
                <input class="rounded-full mr-1" type="checkbox" name="option1" id="option1">
                <label class="text-sm font-light" for="option1"><%= User.human_attribute_name(:name) %></label><br>
                <input class="rounded-full mr-1" type="checkbox" name="option2" id="option2">
                <label class="text-sm font-light" for="option2"><%= User.human_attribute_name(:email) %></label><br>
                <input class="rounded-full mr-1" type="checkbox" name="option3" id="option3">
                <label class="text-sm font-light" for="option3"><%= User.human_attribute_name(:password) %></label><br>
              <% end %>
              <input class="rounded-full mr-1" type="checkbox" name="option4" id="option4">
              <label class="text-sm font-light" for="option4"><%= Dog.human_attribute_name(:name) %></label><br>
              <% if !@dogrun_place.registration_card.blank? %>
                <p class="text-gray-500 text-xs md:text-sm text-left"><%= I18n.t('local.users.route_selection.if_you_have', registration_card: @notation_of_registration_card) %></p>
                <input class="rounded-full mr-1" type="checkbox" name="option5" id="option5">
                <label class="text-sm font-light" for="option5"><%= @notation_of_registration_number %></label><br>
              <% end %>
            </form>
          </div>
        </details>
        <% if @current_user.nil? %>
          <%= link_to send(@minimum_route_path), class: "my-3 mx-auto text-center items-center w-1/2 md:w-1/3 px-2 py-2 font-medium tracking-wide text-white bg-cyan-500 rounded-md hover:bg-cyan-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" do %>
            <span><%= t('local.users.route_selection.to_minimum_route') %></span>
          <% end %>
        <% else %>
          <% if !@dogrun_place.registration_card.blank? %>
            <%= link_to send(@form_selection_path), class: "my-3 mx-auto text-center items-center w-1/2 md:w-1/3 px-2 py-2 font-medium tracking-wide text-white bg-cyan-500 rounded-md hover:bg-cyan-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" do %>
              <span><%= t('local.users.route_selection.to_minimum_route') %></span>
            <% end %>
          <% else %>
            <%= link_to send(@not_have_registration_card_path), class: "my-3 mx-auto text-center items-center w-1/2 md:w-1/3 px-2 py-2 font-medium tracking-wide text-white bg-cyan-500 rounded-md hover:bg-cyan-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" do %>
              <span><%= t('local.users.route_selection.to_minimum_route') %></span>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
