<%= search_form_for @q, url: search_admin_posts_path, 
    html: { method: :get, class: "flex w-full ml-3 items-center flex-wrap" } do |f| %>
  <h2 class="text-gray-700 text-sm items-center mr-1 ml-1"><%= t('defaults.search_period')%></h2>
  <div class="flex mr-3 md:mr-0">
    <%= f.date_field :created_at_gteq, class: "flex-grow h-10 w-1/12 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5" %>
    <span class="pt-2 mr-3 ml-3">~</span>
    <%= f.date_field :created_at_lteq_end_of_day, class: "flex-grow h-10 w-1/12 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5" %>
  </div>
  <div class="flex-grow relative mt-2 md:mt-0 ml-0 md:ml-3">
    <div class="flex">
      <div class="absolute inset-y-0 left-0 items-center pt-3 pl-3 pointer-events-none">
        <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <%= f.search_field :user_name_cont, include_blank: true, placeholder: t('.search_field'), class: "w-2/3 h-10 mr-3 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block pl-10 p-2.5" %>
      <%= f.submit t('defaults.search'), class: "mr-7 px-4 py-2 h-10 font-medium tracking-wide text-white capitalize transition-colors duration-200 transform bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80" %>
    </div>
  </div>
<% end %>
