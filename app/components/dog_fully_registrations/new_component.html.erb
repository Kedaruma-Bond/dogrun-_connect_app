<% content_for(:title, @title) %>
<div class="max-w-5xl md:mx-auto pt-2 pb-2 sm:mx-32 bg-purple-200 rounded-lg">
  <div class="w-full p-8 sm:p-10">
    <p class="text-3xl font-bold leading-7 text-center text-gray-700 mb-1">
      <%= @title %>
    </p>
    <p class="mt-4">
      <% if session[:card_flg] == true %>
        <%= simple_format(I18n.t('local.dog_fully_registrations.new.notice', registration_number_notation: @registration_number_notation), class: "text-sm font-semibold leading-7 text-center text-pink-700") %>
      <% else %>
        <%= simple_format(t('local.dog_fully_registrations.new.notice_hidden'), class: "text-sm font-semibold text-center text-pink-700") %>
      <% end %>
    </p>
    <%= content %>
  </div>
</div>
