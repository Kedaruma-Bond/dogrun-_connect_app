<div class="flex-col mb-5 md:hidden">
  <% if not_entry? %>
    <%= form_with(url: togo_inu_shitsuke_hiroba_entries_path, data: { turbo_confirm: t('.entry_confirm') }) do |f| %>
      <div class="flex flex-col justify-center mt-3">
        <p class="text-lg">
          <%= t('.select_entry_dog') %>
        </p>
        <ul list-style="none" class="mt-5 flex flex-col text-center mx-auto">
          <% @dogs.each do |dog| %>
            <li class="mb-5 text-left">
              <label for=<%= dog.id %>>
                <%= check_box "select_dog", dog.name, id: dog.id, checked_value: 'true', unchecked_value: 'false', class: "scale-125" %>
                <span class="text-left text-xl font-bold ml-2">
                  <%= dog.name %>
                </span>
              </label>
            </li>
          <% end %>
        </ul>
        <div class="flex-col">
          <%= button_tag type: 'submit', class: "flex mt-4 mx-auto items-center justify-center font-bold h-14 text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
            <svg width="24" height="24" stroke-width="1.5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M19 12H12M12 12L15 15M12 12L15 9" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M19 6V5C19 3.89543 18.1046 3 17 3H7C5.89543 3 5 3.89543 5 5V19C5 20.1046 5.89543 21 7 21H17C18.1046 21 19 20.1046 19 19V18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="ml-2 text-xl">
              <%= t('.entry') %>
            </span>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="flex flex-col justify-center mt-3">
      <p class="text-lg">
        <%= t('.during_entry_your_dogs') %>
      </p>
      <ul list-sytle=none class="mt-5 flex flex-col text-center mx-auto">
        <% @during_entry_user_dogs.each do |dog| %>
          <li class="mb-5 text-left text-xl font-bold">
            <%= dog.name %>
          </li>
        <% end %>
      </ul>
      <%= form_with(url: togo_inu_shitsuke_hiroba_entries_path, method: :PATCH, data: { turbo_confirm: t('.exit_confirm') }) do |f| %>
        <div class="flex-col">
          <%= button_tag type: 'submit', class: "flex mt-4 mx-auto items-center justify-center font-bold h-14 text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
            <svg width="24" height="24" stroke-width="1.5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 12H19M19 12L16 15M19 12L16 9" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M19 6V5C19 3.89543 18.1046 3 17 3H7C5.89543 3 5 3.89543 5 5V19C5 20.1046 5.89543 21 7 21H17C18.1046 21 19 20.1046 19 19V18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="ml-2 text-xl">
              <%= t('.exit') %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
