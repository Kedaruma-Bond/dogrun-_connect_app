<div class="max-w-5xl mx-auto px-6 sm:px-6 lg:px-8 mt-5">
    <div class="bg-purple-200 w-full shadow rounded p-8 sm:p-12">
        <p class="text-3xl font-bold leading-7 text-center"><%= t'.title' %></p>
        <%= simple_form_for @contact, url:'/togo_inu_shitsuke_hiroba/contacts/confirm', data: { turbo: false } do |f| %>
            <div class="md:flex items-center mt-12">
                <div class="w-full md:w-1/2 flex flex-col">
                    <%= f.label :name, label_html: { class: "font-bold leading-none" } %>
                    <%= f.input :name, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" },  label: false, hint_html: { class: "text-sm block;" }, hint: "ワンちゃんでも飼い主さんでもどちらでも結構です", required: true, error: false %>
                </div>
                <div class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
                    <%= f.label :email, label_html: { class: "font-bold leading-none" } %>
                    <%= f.input :email, input_html: { class: "block w-11/12 leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" },  label: false, hint_html: { class: "text-xs block;" }, hint: "　　", required: true, error: false %>
                </div>
            </div>
            <div>
                <div class="w-full flex flex-col mt-8">
                    <%= f.label :message, label_html: { class: "font-bold leading-none"} %>
                    <%= f.text_area :message, class: "h-52 text-base leading-none text-gray-900 p-3 focus:oultine-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200" %>
                </div>
            </div>
            <div class="flex items-center justify-center w-full">
                <%= f.button :submit, '入力内容確認', class: "mt-9 font-bold leading-none text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
            </div>
        <% end %>
    </div>
</div>
