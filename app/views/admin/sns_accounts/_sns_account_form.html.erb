<%= simple_form_for [:admin, sns_account], data: { controller: 'disable', "disable-with-value": t('defaults.processing') } do |f|  %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mt-1">
    <%= f.input :facebook_id, input_html: { class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-2 bg-gray-100 border rounded border-gray-200"}, label: DogrunPlace.human_attribute_name(:facebook_id), hint_html: { class: "text-gray-500 text-xs" }, hint: t('.facebook_id_hint'), error: false %>
  </div>
  <div class="mt-4">
    <%= f.input :instagram_id, input_html: { class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-2 bg-gray-100 border rounded border-gray-200"}, label: DogrunPlace.human_attribute_name(:instagram_id), hint_html: { class: "text-gray-500 text-xs" }, hint: t('.instagram_id_hint'), error: false %>
  </div>
  <div class="mt-4">
    <%= f.input :twitter_id, input_html: { class: "block w-full leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-2 bg-gray-100 border rounded border-gray-200"}, label: DogrunPlace.human_attribute_name(:twitter_id), hint_html: { class: "text-gray-500 text-xs" }, hint: t('.twitter_id_hint'), error: false %>
  </div>
  <div class="flex justify-center mt-3 sm:mt-0 sm:mx-3">
    <%= f.button :submit, class: "mt-3 font-bold leading-normal text-white py-4 px-10 bg-green-700 rounded hover:bg-green-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none disabled:cursor-not-allowed disabled:bg-green-500" do %>
      <span><%= t'defaults.registration' %></span>
    <% end %>
  </div>
<% end %>
