<%= render DogRegistrations::ConfirmComponent.new(
    title: I18n.t('local.dog_registrations.confirm.title')) do %>
  <% if session[:card_flg] == true %>
    <%= render partial: 'shared/dog_registration_confirm', 
      locals: { 
        dog_registration: @dog_registration, 
        dog_registration_path: @dog_registration_path,
        registration_number_notation: I18n.t('reon.registration_number')
      } %>
  <% else %>
    <%= render partial: 'shared/dog_registration_hidden_confirm', 
      locals: { 
        dog_registration: @dog_registration, 
        dog_registration_path: @dog_registration_path,
        registration_number_notation: I18n.t('reon.registration_number')
      } %>
  <% end %>
<% end %>
