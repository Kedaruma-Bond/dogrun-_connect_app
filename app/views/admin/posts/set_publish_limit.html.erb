<% content_for(:title, t('.title')) %>
<div class="w-full mx-auto px-0 sm:px-6 mt-5 bg-gray-300">
  <div class="w-full shadow rounded p-6">
    <%= simple_format(t('.title'), { class: 'text-2xl font-bold leading-7 text-center mb-10' }, { wrapper_tag: "div" } ) %>
    <%= render partial: 'publish_limit_form', locals: { post: @post } %>
  </div>
  <div class="mt-2 md:mx-auto px-0 md:px-2 py-2 w-full md:w-1/3 rounded-xl border-2 border-neutral-400
    bg-[url('https://res.cloudinary.com/hryerpkcw/image/upload/f_auto,g_center,q_auto/v1671380081/w4ygbtfdkxu3gzrixk6u.jpg')]
  ">
    <%= @post.post_viewing %>
  </div>
</div>
