<p class="text-xl font-bold leading-7 text-center text-gray-700 mb-5"><%= t'.title' %></p>
<div class="w-full flex flex-col mt-8">
  <div class="md:flex items-center text-gray-700">
    <div class="w-full md:w-1/4 flex flex-col items-center justify-center">
      <p class="font-bold leading-none"><%= t('.registration_number') %></p> 
      <p class="block leading-none text-lg p-3 mt-4"><%= @dog_registration.registration_number %></p>
    </div>
    <div class="w-full md:w-1/4 flex flex-col md:mt-0 mt-7 items-center justify-center">
      <p class="font-bold leading-none"><%= t('.name') %></p>
      <p class="block leading-none text-xl p-3 mt-4"><%= @dog_registration.name %></p>
    </div>
    <div class="w-full md:w-1/4 flex flex-col md:mt-0 mt-7 items-center justify-center"> 
      <p class="font-bold leading-none"><%= t('.castration') %></p>
      <% if @dog_registration.castration == 'castrated' %>
        <p class="block leading-none p-3 mt-4">
          <%= t('.castrated') %>
        </p>
      <% else %>
        <p class="block leading-none p-3 mt-4">
          <%= t('.non_castrated') %>
        </p>
      <% end %>
    </div>
    <div class="w-full md:w-1/4 flex flex-col md:mt-0 mt-7 items-center justify-center"> 
      <p class="font-bold leading-none"><%= t('.public') %></p>
      <% if @dog_registration.public == 'public_view' %>
        <p class="block leading-none p-3 mt-4">
          <%= t('.public_view') %>
        </p>
      <% else %>
        <p class="block leading-none p-3 mt-4">
          <%= t('.non_public') %>
        </p>
      <% end %>
    </div>
  </div>
</div>
