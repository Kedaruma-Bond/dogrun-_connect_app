<tr class="bg-white border-b transition duration-300 ease-in-out hover:bg-gray-100">
  <td class="px-3 py-2 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= turbo_frame_tag dom_id(post, :post_icon) do %>
      <%= render partial: "post_icon", locals: { post: post } %>
    <% end %>
  </td>
  <td class="text-sm text-gray-900 font-light px-3 py-2 whitespace-nowrap">
    <%= l post.created_at, format: :long %>
  </td>
  <td class="text-sm text-gray-900 font-light px-3 py-2 whitespace-nowrap">
    <%= post.user.name %>
  </td>
  <td class="text-sm text-gray-900 font-light px-3 py-2 whitespace-nowrap">
    <%= post.post_type_i18n %>
  </td>
  <td class="text-sm text-gray-900 font-light px-3 py-2 whitespace-nowrap">
    <% if post.article? %>
      -
    <% else %>
      <%= post.embed.embed_type_i18n %>
    <% end %>
  </td>
  <td>
    <% if post.article? %>
      <%= link_to edit_admin_article_path(post), data: { turbo_method: :get, turbo_confirm: t('defaults.edit_confirmation') }, 
          class: "flex justify-left ml-2 text-sm text-gray-900 hover:text-gray-500 py-2 px-4" do %>
        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
        </svg>
      <% end %>
    <% else %>
      <%= link_to edit_admin_embed_path(post), data: { turbo_method: :get, turbo_confirm: t('defaults.edit_confirmation') }, 
          class: "flex justify-left ml-2 text-sm text-gray-900 hover:text-gray-500 py-2 px-4" do %>
        <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
        </svg>
      <% end %>
    <% end %>
  </td>
  <td>
    <%= link_to admin_post_path(post), 
        data: { turbo_method: :delete, turbo_confirm: t('defaults.destroy_confirmation') }, 
        class: "flex justify-left ml-2 text-sm text-gray-900 hover:text-gray-500 py-2 px-4" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    <% end %>
  </td>
</tr>
