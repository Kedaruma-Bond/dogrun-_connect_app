<div class="w-full flex flex-col mt-8">
  <div class="md:flex items-center text-gray-700">
    <div class="w-full md:w-1/4 flex flex-col md:mt-0 mt-1 items-center justify-center">
      <p class="font-light text-sm leading-none"><%= t('defaults.dog_name') %></p>
      <p class="block leading-none text-xl p-3 font-bold mt-2"><%= dog_registration.name %></p>
    </div>
    <div class="w-full md:w-1/4 flex flex-col md:mt-0 mt-7 items-center justify-center"> 
      <p class="font-light text-sm leading-none"><%= Dog.human_attribute_name(:castration) %></p>
      <% if dog_registration.castration == 'castrated' %>
        <p class="block leading-none text-xl font-bold p-3 mt-2">
          <%= t('enums.dog_registration.castration.castrated') %>
        </p>
      <% else %>
        <p class="block leading-none text-xl font-bold p-3 mt-2">
          <%= t('enums.dog_registration.castration.non_castrated') %>
        </p>
      <% end %>
    </div>
    <div class="w-full md:w-1/4 flex flex-col md:mt-0 mt-7 items-center justify-center"> 
      <p class="font-light text-sm leading-none"><%= Dog.human_attribute_name(:public) %></p>
      <% if dog_registration.public == 'public_view' %>
        <p class="block leading-none text-xl font-bold p-3 mt-2">
          <%= t('enums.dog_registration.public.public_view') %>
        </p>
      <% else %>
        <p class="block leading-none text-xl font-bold p-3 mt-2">
          <%= t('enums.dog_registration.public.non_public') %>
        </p>
      <% end %>
    </div>
  </div>
</div>
<%= simple_form_for dog_registration, url: send(dog_registration_path), data: { turbo: false  } do |f| %>
  <div class="mt-6 sm:flex justify-center">
    <div class="mt-4 shadow sm:mx-3 sm:mt-0">
      <%= f.button :submit, t('defaults.back'), name: 'back', class: "items-center w-full px-10 py-4 text-base font-semibold text-white bg-rose-700 rounded hover:bg-rose-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
    </div>
    <div class="shadow sm:mx-3 sm:mt-0 mt-4">
      <%= f.button :submit, t('defaults.registration'), class: "items-center w-full px-10 py-4 text-base font-semibold text-white bg-emerald-400 rounded hover:bg-emerald-500 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
    </div>
  </div>
<% end %>
