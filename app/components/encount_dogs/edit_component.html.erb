<%#= turbo_frame_tag "encount_dog_edit_modal" do %>
<%= turbo_frame_tag "form_modal" do %>
  <div data-controller="turbo-form-modal" data-turbo-form-modal-target="modal" data-action="turbo:submit-end->turbo-form-modal#submitEnd" 
    class="animate-fade-in flex items-center justify-center fixed z-40 inset-0 h-full p-3">
    <button data-action="turbo-form-modal#hideModal" class="cursor-default w-full h-full fixed inset-0 bg-gray-700 bg-opacity-50"></button>
    <%= turbo_frame_modal_close_button %>
    <div class="turbo-form-modal bg-slate-300 backdrop-blur bg-opacity-75 max-w-[400px]">
      <div class="w-28 h-28 mb-1 md:mb-0 mx-auto">
        <%= encount_dog_thumbnail(@encount_dog.dog, @encount_dog) %>
      </div>
      <div class="w-full mt-1 text-center">
        <p class="text-gray-600 font-bold leading-none"><%= t('local.encount_dogs.edit.encount_dog_name') %></p>
        <p class="text-gray-800 mt-2 text-2xl font-bold leading-none"><%= @encount_dog.dog.name %></p>
      </div>
      <%= content %>
    </div>
  </div>
<% end %>
