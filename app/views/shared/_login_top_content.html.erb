<div class="flex-col mb-5 md:hidden">
  <% if not_entry? && not_pre_entry? %> 
    <div class="flex flex-col justify-center mt-3">
      <p class="text-lg text-gray-700 font-semibold">
        <%= t('.please_select_dog') %>
      </p>
      <% if @dogs.count == 0 %>
        <p class="text-base font-bold mt-3 mb-3 text-red-700">
          <%= t('.please_register_dog') %>
        </p>
      <% else %>
        <ul list-style="none" class="mt-5 flex flex-col text-center mx-auto my-1">
          <% @dogs.each do |dog| %>
            <li class="mb-5 text-left">
              <label for=<%= dog.id %> class="flex mb-2">
                <%= tag.input name: "select_dog[#{dog.name}]", type: "hidden", value: "0", autocomplete: "off", form: "entry_form" %>
                <%= tag.input id: dog.id, class: "scale-125 rounded mt-4", type: "checkbox", value: "1", name: "select_dog[#{dog.name}]", form: "entry_form" %>
                <div class="w-12 h-12 ml-3">
                  <%= dog_thumbnail(dog) %>
                </div>
                <div class="text-left leading-3 text-gray-700 text-xl font-bold ml-3 my-auto">
                  <%= dog.name %>
                </div>
              </label>
            </li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with(url: send(entries_path), id: "entry_form", method: :post,
          data: { turbo_confirm: t(".pre_entry_or_entry_confirm") } ) do |f| %>
        <div class="flex-col mb-5">
          <%= button_tag type: 'submit', name: "pre_flg", value: "1", 
              class: "flex mx-auto items-center justify-center font-bold h-14 text-white py-4 px-5 bg-blue-400 rounded hover:bg-blue-300 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path clip-rule="evenodd" fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-13a.75.75 0 00-1.5 0v5c0 .414.336.75.75.75h4a.75.75 0 000-1.5h-3.25V5z"></path>
            </svg>
            <span class="text-lg ml-2">
              <%= t('.pre_entry') %>
            </span>
          <% end %>
        </div> 

        <div class="flex-col">
          <%= button_tag type: 'submit', name: "pre_flg", value: "0", 
              class: "flex mx-auto items-center justify-center font-bold h-14 text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
            <svg width="24" height="24" stroke-width="1.5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M19 12H12M12 12L15 15M12 12L15 9" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M19 6V5C19 3.89543 18.1046 3 17 3H7C5.89543 3 5 3.89543 5 5V19C5 20.1046 5.89543 21 7 21H17C18.1046 21 19 20.1046 19 19V18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="ml-2 text-xl">
              <%= t('.entry') %>
            </span>
          <% end %>
        </div>
      <% end %>
  </div>
  <% elsif !not_pre_entry? && not_entry? %>
    <div class="flex flex-col justify-center mt-3">
      <p class="text-base text-gray-700 font-semibold">
        <%= t('.during_pre_entry_your_dogs') %>
      </p>
      <ul list-sytle=none class="mt-3 flex flex-col text-center mx-auto">
        <% current_pre_entries.each do |pre_entry| %>
          <li class="flex mb-5 text-left text-xl text-gray-700 font-bold">
            <div class="h-10 w-10 mr-3">
              <%= dog_thumbnail(pre_entry.dog) %>
            </div>
            <div class="my-auto">
              <%= pre_entry.dog.name %>
            </div>
          </li>
        <% end %>
      </ul>
      <p class="text-sm text-red-700 font-medium mb-3">
        <%= t('.canceled_after_30_mins') %>
      </p>
      <%= form_with(url: send(pre_entries_path), method: :delete, data: { turbo_confirm: t('.cancel_confirm') }) do |f| %>
        <div class="flex-col mb-5">
          <%= button_tag type: 'submit', class: "flex mx-auto items-center justify-center font-bold h-14 text-white py-4 px-10 bg-red-700 rounded hover:bg-red  -600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="ml-2 text-xl">
              <%= t('.cancel_to_pre_entry') %>
            </span>
          <% end %>
        </div>
      <% end %>

      <%= form_with(url: send(entries_path), method: :post, data: { turbo_confirm: t('.entry_confirm') }) do |f| %>
        <div class="flex-col">
          <%= button_tag type: 'submit', name: "pre_flg", value: "0", class: "flex mx-auto items-center justify-center font-bold h-14 text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
            <svg width="24" height="24" stroke-width="1.5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 12H19M19 12L16 15M19 12L16 9" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M19 6V5C19 3.89543 18.1046 3 17 3H7C5.89543 3 5 3.89543 5 5V19C5 20.1046 5.89543 21 7 21H17C18.1046 21 19 20.1046 19 19V18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="ml-2 text-xl">
              <%= t('.entry') %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div> 
  <% else %>
    <div class="flex flex-col justify-center mt-3">
      <p class="text-lg text-gray-700 font-semibold">
        <%= t('.during_entry_your_dogs') %>
      </p>
      <ul list-sytle=none class="mt-3 flex flex-col text-center mx-auto">
        <% current_entries.each do |entry| %>
          <li class="flex mb-5 text-left text-xl text-gray-700 font-bold">
            <div class="h-10 w-10 mr-3">
              <%= dog_thumbnail(entry.dog) %>
            </div>
            <div class="my-auto">
              <%= entry.dog.name %>
            </div>
          </li>
        <% end %>
      </ul>
      <div class="flex justify-center">
        <p class="text-lg mb-1 text-gray-700 font-semibold">
          <%= Entry.human_attribute_name(:entry_at) %> : 
          &nbsp;
        </p>
        <p class="text-left text-xl font-bold mb-5 text-gray-700">
          <%= l @entry_for_time.entry_at, format: :short2 %>
        </p>
      </div>
      <%= form_with(url: send(entries_path), method: :patch, data: { turbo_confirm: t('.exit_confirm') }) do |f| %>
        <div class="flex-col">
          <%= button_tag type: 'submit', class: "flex mx-auto items-center justify-center font-bold h-14 text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" do %>
            <svg width="24" height="24" stroke-width="1.5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 12H19M19 12L16 15M19 12L16 9" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M19 6V5C19 3.89543 18.1046 3 17 3H7C5.89543 3 5 3.89543 5 5V19C5 20.1046 5.89543 21 7 21H17C18.1046 21 19 20.1046 19 19V18" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span class="ml-2 text-xl">
              <%= t('.exit') %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
